<!-- realTimeProducts.handlebars -->
<h1>Lista de Productos</h1>
<a href="/">Ver productos</a>
<ul id="productList">
        <table>
            <tr>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Id</th>
            </tr>
            {{#each products}}
            <tr>
                <td>{{description}}</td>
                <td>${{price}}</td>
                <td>{{pid}}</td>
                <td><button class="btn btn-danger" data-product-id="{{pid}}">Eliminar</button></td>
                <td><button class="btn btn-primary" data-product-id="{{pid}}">Modificar</button></td>
            </tr>
            {{/each}}
        </table>
</ul>

<form id="productForm" action="/addProduct"  method="post" enctype="multipart/form-data" >
    <table>
        <thead>
        </thead>
        <tbody>
            <tr class="border-0">
                <td><label for="productTittle">Titulo:</label></td>
                <td><input type="text" id="productTittle" name="productTittle" > </td>
            </tr>
            <tr class="border-0">
                <td><label for="productDescription">Nombre:</label></td>
                <td><input type="text" id="productDescription" name="productDescription"></td>
            </tr>
            <tr class="border-0">
                <td><label for="productPrice" class="col-sm-2 col-form-label">Precio:</label></td>
                <td><input type="number"  id="productPrice" name="productPrice" ></td>
            </tr>
            <tr class="border-0">
                <td><label for="productCode">Codigo:</label></td>
                <td><input type="text" id="productCode" name="productCode" ></td>
            </tr>
            <tr class="border-0">
                <td><label for="productStock">Stock:</label></td>
                <td><input type="number" id="productStock" name="productStock" ></td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-success" id="addProductBtn">Agregar Producto</button>
</form>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
